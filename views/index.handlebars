<h1>Welcome to the burger app!</h1>

<h2>Burgers Available!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{burger_name}}
      <button class="devour" data-id="{{id}}">Eat</button>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Eaten!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{burger_name}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
